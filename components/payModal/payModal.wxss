/* pages/components/payModal/payModal.wxss */

.c-modal {
  z-index: 2000;
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(0, 0, 0, 0.5);
}

.modalConatiner {
  z-index: 2001;
  background: #fff;
  border-radius: 10px;
  width: 80%;
  max-height: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  opacity: 1;
}

.modal-item {
  width: 100%;
  display: flex;
  flex-direction: row;
  font-size: 24rpx;
}

.modal-item text {
  font-size: 26rpx;
  width: 80%;
  padding: 0 10%;
  height: 80rpx;
  line-height: 80rpx;
}

.modal-item label {
  width: 30%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
}

.modal-item input {
  width: 70%;
  height: 100rpx;
  line-height: 100rpx;
}

.modal-foot {
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
}

.foot-item {
  width: 50%;
  font-size: 24rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
}

.foot-cancel {
  color: #000;
}

.foot-confirm {
  color: #fd834a;
}
