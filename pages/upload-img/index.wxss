.page{
    padding: 20rpx;
    width: 710rpx;
    background-color: #fff;
}
.container{
  background-color: #F0F2F8;
}
.text{
    width: 100%;
    margin-bottom: 20rpx;
    font-size: 30rpx;
    padding: 10rpx;
    min-height: 130rpx;
}

.image{
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    align-self:flex-start;
    width:31%;
    height: 200rpx;
    margin-bottom: 10rpx;
    /* padding: 2px; */
    background-color: #EAEDF3;
    position: relative;
    margin: 0 1% 15rpx 1%;
}
.del_img{
  display: block;
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  right: 0rpx;
  top: 0rpx;
}

.moment_img{
 
    width: 200rpx;
    height: 200rpx;
}
.add_img{

    width: 60rpx;
    height: 60rpx;
}

.image_content{
    width: 100%;
    display: flex;
    flex-wrap: wrap;
    /* justify-content: space-between; */
    margin-bottom: 20px;
}
.l_button{
    position: fixed;
    bottom: 50rpx;
    width: 90%;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}
.b_time{
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    height: 88rpx;
    background-color: #fff;
    margin-top: 20rpx;
    padding: 0 20rpx;

}
.b_time>view{
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}

.b_time view{
   font-size: 28rpx;
   color: #797979;
}

.time_left>image{
    width: 40rpx;
    height: 40rpx;
}
.time_right>image{
    width: 14rpx;
    height: 24rpx;

}
.l_button_text{
    font-size: 32rpx;
}
.placeholderStyle{
    font-size: 32rpx;
}
.video{
    position: relative;
}
.video-play{
    position: fixed;
    width: 64rpx;
    height: 64rpx;
    z-index: 999;

}