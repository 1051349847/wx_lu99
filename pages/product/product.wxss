/* pages/activity/activity.wxss */
.container{
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;

}

.swiper-banner {
    width: 100%;
    height: 500rpx;

}
.home-banner{
    width: 100%;
    height: 500rpx;
}

.a_herader{
    width: 708rpx;
    display: flex;
    flex-direction: column;
    justify-content:center;
    align-items: center;
    padding: 30rpx;
    box-sizing: border-box;
}



.var-name{
    display: flex;
    flex-direction: row;
    align-content: center;
    justify-content: center;
}

.a_herader_l{
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    width: 100%;
}



.a_herader_r{
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    height: 90rpx;
    width: 100%;
    box-shadow: 0 0 5rpx #101846;
    border-radius: 10rpx;
    margin-top: 30rpx;
}

.title{
    font-size: 32rpx;
}
.summary{
    font-size: 24rpx;
    color: #999999;
}




.detail-bottom-box{
    width: 100%;
}

@import "../tpls/base.wxss";
.detail-container {
    background-color:#F9F9F9
}
.detail-header-box,.detail-bottom-box{
    background-color: #fff;
}
.detail-topic-img{
    display: flex;
    justify-content: center;
}
.detail-topic-img image{
    width: 100%;
}




.footer-box {
    width: 100%;
    height: 88rpx;
    position: fixed;
    bottom: 40rpx;
    display: flex;
    z-index: 99999;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    padding: 0 30rpx;
    box-sizing: border-box  ;
}

.box-list {
    width: 14%;
    border-right: 1px solid #f2f2f2;
    position: relative;
    display: flex;
    flex-direction: column;
    height: 100rpx;
    align-items: center;
    justify-content: center;
}

.box-list button {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    opacity: 0;
}

.box-list image {
    width: 50rpx;
    height: 42rpx;
    display: block;
    margin: 0 auto;
}
.box-list text{
    font-size: 24rpx;
}
.shop-num {
    font-size: 22rpx;
    background-color: #b5272d;
    color: #fff;
    width: 36rpx;
    height: 36rpx;
    line-height: 34rpx;
    text-align: center;
    position: absolute;
    top: 20rpx;
    right: 20rpx;
    border-radius: 20rpx;
}

.box-title {
    width: 29%;
    font-size: 30rpx;
    line-height: 44rpx;
    text-align: center;
}

.box-title .boxshop-yuan {
    margin-top: 10rpx;
}

.box-title .npx {
    height: 100rpx;
    line-height: 100rpx;
}


.buy-now {
    background-color: #b5272d;
    color: #fff;
}
.buy-off{
    background-color: rgb(229,229,229);
    color: black;
    font-size: 30rpx;
}
.buy-user-list image{
    width: 64rpx;
    height: 64rpx;
    border-radius: 50%;
    margin-right: 15rpx;

}
.buy-user-list{
    width: 708rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    margin-top: 10rpx;

}
.user-list{
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}



.twt {
    width:45%;

}

.ptuan-user-box {
    width: 100%;
}
.ptuan-user-title {
    font-size: 26rpx;
    color: #999;
    padding-left: 22rpx;
    height: 66rpx;
    border-bottom: 1px solid #f5f5f5;
    line-height: 66rpx;
}

.ptuan-user-list {
    width: 90%;
    margin: 0 auto;
    height: 110rpx;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
    position: relative;
}

.ptuan-user-list image {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    border: 1px solid #b5272d;
    position: absolute;
    z-index: 999;
    background-color: #fff;
}

.ptuan-user-info-box {
    position: absolute;
    width: 88%;
    left: 65rpx;
    border: 1px solid #b5272d;
    height: 80rpx;
    margin-top: 12rpx;
}

.ptuan-user-name {
    float: left;
    width: 50%;
    margin-left: 54rpx;
    font-size: 24rpx;
    line-height: 39rpx;
}

.ptuan-user-name text {
    display: block;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.ptuan-user-btn {
    float: right;
    height: 82rpx;
    line-height: 82rpx;
    background-color: #b5272d;
    font-size: 28rpx;
    color: #fff;
    width: 150rpx;
    text-align: center;
    margin-top: 12rpx;
    border-bottom-right-radius: 10rpx;
    border-top-right-radius: 10rpx;
}
.goods-ptuan-box {
    background-color: #b5272d;
    height: 100rpx;
    width: 100%;
    margin-top: 10rpx;
}

.goods-ptuan {
    float: left;
    height: 100rpx;
    line-height: 100rpx;
    margin-left: 20rpx;
    color: #fff;
    font-size: 28rpx;
}

.goods-ptuan text {
    margin-left: 8rpx;
    font-size: 40rpx;
}
.ass_detail{
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-start;
    width: 100%;
    height: 80rpx;
    background-color: #9fd8f5;
}


.ass_detail>text{
    color: #333;
    margin-left: 10rpx;
}


.goods-ptuan-info {
    float: left;
    margin-left: 20rpx;
    font-size: 24rpx;
    color: #fff;
    line-height: 36rpx;
}

.goods-ptuan-info .txa {
    display: block;
    margin-top: 16rpx;
}

.goods-ptuan-info .txb {
    display: block;
    text-decoration: line-through;
}
.goods-right {
    float: right;
    margin-right: 20rpx;
    height: 100rpx;
    line-height: 110rpx;
    color: #fff;
    font-size: 24rpx;
}
.goods-left {
    width: 100%;
}

.goods-title {
    font-size: 34rpx;
    color: #333;
    padding-left: 30rpx;
}

.goods-characteristic {
    font-size: 28rpx;
    color: #999;
    padding-left: 30rpx;
    padding-top: 10rpx;
    padding-bottom: 10rpx;
}

.box-title {

    font-size: 30rpx;
    line-height: 44rpx;
  color: #ffffff;
}

.box-title .boxshop-yuan {
    margin-top: 10rpx;
}

.box-title .npx {
    height: 100rpx;
