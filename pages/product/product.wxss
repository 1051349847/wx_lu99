    background: -webkit-linear-gradient(left, rgb(255,157,149), rgb(255,106,141));
    background: -o-linear-gradient(right, rgb(255,157,149), rgb(255,106,141));
    background: -moz-linear-gradient(right, rgb(255,157,149), rgb(255,106,141));
    background: linear-gradient(to right, rgb(255,157,149), rgb(255,106,141));
    color: #fff;
}

.shares {
    width: 336rpx;
    height: 88rpx;
    line-height: 88rpx;
    border-radius: 44rpx;
}

.go-cart {
  background: -webkit-linear-gradient(left, rgb(83,205,220), rgb(51,183,206));
  background: -o-linear-gradient(right, rgb(83,205,220), rgb(51,183,206));
  background: -moz-linear-gradient(right, rgb(83,205,220), rgb(51,183,206));
  background: linear-gradient(to right, rgb(83,205,220), rgb(51,183,206));
}

.select {
    display: flex;
    flex-direction: row;
    align-items: center;

    height: 100%;
    width: 50%;

}
.select image{
  height: 36rpx;
  width: 36rpx;
}
.select-right{
   justify-content: flex-end;
}
